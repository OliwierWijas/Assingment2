<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment2.view.LoginViewController">
   <children>
      <Label alignment="BASELINE_CENTER" layoutX="92.0" layoutY="31.0" prefHeight="38.0" prefWidth="117.0" text="LOGIN" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="nickname" layoutX="56.0" layoutY="113.0" prefHeight="26.0" prefWidth="190.0" promptText="Nickname">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <PasswordField fx:id="password" layoutX="56.0" layoutY="160.0" prefHeight="26.0" prefWidth="190.0" promptText="Password">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
      <Label fx:id="error" layoutX="21.0" layoutY="215.0" prefHeight="38.0" prefWidth="260.0" wrapText="true" />
      <Button layoutX="100.0" layoutY="280.0" mnemonicParsing="false" onAction="#loginButtonPressed" prefHeight="30.0" prefWidth="100.0" text="LOGIN">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="100.0" layoutY="315.0" mnemonicParsing="false" onAction="#closeButtonPressed" prefHeight="30.0" prefWidth="100.0" text="QUIT">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
